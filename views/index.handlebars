<div class="container" style="text-align: center;">
    <div class="col">

        <h1>
            <img src="/assets/img/burger.png" class="mt-5" style="width: 100px; height: 100px;">
            <br>
            Eat-Da-Burger!
        </h1>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-4 uneaten-burger" style="text-align: center;">
                <h4>Your Burgers:</h4>
                <ol id="uneaten-burger">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>{{burger_name}}</li>
                        {{!-- <button class="change-eaten" style="color: black;" data-id="{{id}}" data-neweaten="{{eaten}}">
                            {{#if eaten}}{{else}}Devour it!{{/if}}
                        </button> --}}
                    {{/unless}}
                    {{/each}}
                </ol>
            </div>

            <div class="col-2" id="burger-button">
            <h4>&nbsp;</h4>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{!-- <li>{{burger_name}}</li> --}}
                        <button class="change-eaten" style="color: black;" data-id="{{id}}" data-neweaten="{{eaten}}">
                            {{#if eaten}}{{else}}Devour it!{{/if}}
                        </button>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col-4">
                <h4>Burgers You've Eaten:</h4>
                <ol id="eaten-burger">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li id="eaten-burger-listItem">{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ol>
            </div>
            <div class="col-1"></div>
        </div>

        <form class="create-form">
            <div class="form-group mt-3 mb-1">
                {{!-- <label for="ca">Cat Name:</label> --}}
                <input type="text" id="add-burger" name="burger_name">
            </div>

            <button type="submit" class="btn btn-primary mt-0 mb-3">submit</button>
            <p>Enter a burger you want to eat, then click the "Submit" button</p>
        </form>

    </div>
</div>